	 for(i=0;i<arr.length;i++)
	  {
        	arr[i]=input.nextInt();
	  } 
int a[]={10,40,40,30,20};
int b=0;
result=a[0];
for(i=1;i<a.length;i++){
  
 if(a[i]>result)
 {
   result = a[i];
 
 }
   
}
System.out.println(result);
for(i=0;i<a.length;i++){
  b=b+a[i];
}
mark_avg = b/a.length;
System.out.print(mark_avg);
//initialize maximum element as first element of the array.  
